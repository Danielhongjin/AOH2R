					</Panel> 
					<Panel class="DifficultyChoiceBox" id="player3" hittest="false"> 
						<Label class="PlayerLabel" id="playerLabel3" text="N/A" />
						<Label class="DifficultyChoiceLabel" id="playerLabelChoice3" text="N/A" />
					</Panel> 
					<Panel class="DifficultyChoiceBox" id="player4" hittest="false"> 
						<Label class="PlayerLabel" id="playerLabel4" text="N/A" />
						<Label class="DifficultyChoiceLabel" id="playerLabelChoice4" text="N/A" />
					</Panel> 
				</Panel> 
			</Panel>
		</snippet> 
	</snippets>

	<Panel class ="base" hittest="false">
		<Panel id ="Difficulties" hittest="false">
		</Panel>
	</Panel>
</root>