<root>
    <styles>
 		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/profile_badge.vcss_c" />

		<include src="s2r://panorama/styles/end_screen.vcss_c" />
    </styles>

    <scripts>
        <include src="s2r://panorama/scripts/utils.vjs_c"/>
    	<include src="s2r://panorama/scripts/end_screen.vjs_c" />
    </scripts>

	<snippets>
		<snippet name="Team">
			<Panel class="Team">

			</Panel>
		</snippet>
		
		<snippet name="Achievements">
			<Panel class="Achievements">

			</Panel>
		</snippet>

		<snippet name="Player">
			<Panel class="Player">
				<Panel class="HeaderColumn">
					<Panel id="PlayerColor" />
					<Panel id="NameAndHero" class="FullWidthHeight TopBottomFlow">
						<Panel class="HeroBox">
							<DOTAAvatarImage id="PlayerAvatar" />
							<DOTAUserName id="PlayerNameScoreboard" />
						</Panel>
						<Panel class="PlayerBox">
							<Image id="HeroIcon" />
							<Label id="HeroLevelLabel" class="MonoNumbersFont" text="{d:hero_level}"/>
							<Label id="LevelAndHero" text="{s:hero_name}"/>
						</Panel>
					</Panel>
				</Panel>
				<Panel class="PlayerStats" id="StatPanel">
					<Panel class="PlayerStatLabels">
						<Label class="DefinitionLabel" text="#end_screen_legend_damage_taken" onmouseover="UIShowTextTooltipStyled( #end_screen_legend_damage_taken_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
						<Label class="DefinitionLabel" text="#dota_page_match_details_legend_hero_healing" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_hero_healing_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
						<Label class="DefinitionLabel" text="#end_screen_legend_boss_damage" onmouseover="UIShowTextTooltipStyled( #end_screen_legend_boss_damage_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
					</Panel>
					<Panel class="PlayerStatDefinitions">
						<Label class="DefinitionLabel" text="{s:damageTaken}" />
						<Label class="DefinitionLabel" text="{s:heroHealing}" />
						<Label class="DefinitionLabel" text="{s:bossDamage}" />
						
					</Panel>
				</Panel>
				<Panel class="PlayerStats"  id="StatPanel2">
					<Panel class="PlayerStatLabels">
						<Label class="DefinitionLabel" text="#dota_page_match_details_legend_deaths" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_deaths_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
						<Label class="DefinitionLabel"  text="#end_screen_legend_saves" onmouseover="UIShowTextTooltipStyled( #end_screen_legend_saves_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
						<Label class="DefinitionLabel" text="#end_screen_legend_gold_bags" onmouseover="UIShowTextTooltipStyled( #end_screen_legend_gold_bags_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
					</Panel>
					<Panel class="PlayerStatDefinitions">
						<Label class="DefinitionLabel" text="{d:deaths}" />
						<Label class="DefinitionLabel" text="{d:saves}" />
						<Label class="DefinitionLabel" text="{d:goldBags}" />
					</Panel>
				</Panel>
				<Panel class="PlayerStats" id="AttributePanel">
					<Panel class="PlayerStatLabels">
						<Image class="AttributeIcon" src="s2r://panorama/images/primary_attribute_icons/primary_attribute_icon_strength_psd.vtex" onmouseover="UIShowTextTooltipStyled( #DOTA_SHOP_TAG_STR, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
						<Image class="AttributeIcon" src="s2r://panorama/images/primary_attribute_icons/primary_attribute_icon_agility_psd.vtex" onmouseover="UIShowTextTooltipStyled( #DOTA_SHOP_TAG_INT, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
						<Image class="AttributeIcon" src="s2r://panorama/images/primary_attribute_icons/primary_attribute_icon_intelligence_psd.vtex" onmouseover="UIShowTextTooltipStyled( #DOTA_SHOP_TAG_AGI, ShortTextTooltip )" onmouseout="UIHideTextTooltip()" />
					</Panel>
					<Panel class="PlayerStatDefinitions">
						<Label class="DefinitionLabel" text="{d:strength}" />
						<Label class="DefinitionLabel" text="{d:agility}" />
						<Label class="DefinitionLabel" text="{d:intellect}" />
					</Panel>
				</Panel>
				<Panel class="PlayerInventoryWindow">
					<Panel class="PlayerInventory">
						<Panel class="InventorySlots" id="ItemsContainer"/>
						
					</Panel>
					<Panel class="PlayerInventory">
						<Panel class="InventorySlots" id="NeutralItemContainer"/>
						<Panel class="InventorySlots" id="BackpackItemsContainer"/>
					</Panel>
				</Panel>
				
				
			</Panel>
		</snippet>
		<snippet name="Award">
			<Panel class="Award">
				<Panel id="AwardStatBox">
					<Label class="AwardLabel" text="{s:award_label}" />
					<Label class="AwardStatLabel" text="{s:award_stat}" />
				</Panel>
				
				<Panel id="AwardInfo">
					<Panel class="AwardPlayerBox">
						<Image id="AwardHeroIcon" />
						<Label id="AwardLevelAndHero" text="{s:hero_name}"/>
					</Panel>
					<Panel class="HeroBox">
						<DOTAAvatarImage id="AwardPlayerAvatar"/>
						<DOTAUserName id="AwardPlayerNameScoreboard" />
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	
	</snippets>

	
	
	<Panel class="EndScreenBase" >
		<Panel id="LoadingPanel">
			<Label id="LoadingText" text="LOADING"/>
			<Panel class="Spinner" />
			<Label id="LoadingMessage" text="Waiting for data..."/>
		</Panel>
		<Panel id="ErrorPanel">
			<Label id="ErrorText" text="ERROR"/>
			<Image id="ErrorIcon" />
			<Label id="ErrorMessage" />
			<TextButton id="CloseButton" class="ButtonBevel" onactivate="FinishGame()" text="#CustomEndScreenClose" />
		</Panel>
		<Panel id="EndScreenWindow">
			<Panel id="MatchResultBlock">
					<Panel id="EndScreenDurationBox">
					<Label id="EndScreenMinutesStatLabel" text="" />
					<Label id="EndScreenMinutesLabel" text="#minutes" />
					<Label id="EndScreenSecondsStatLabel" text="" />
					<Label id="EndScreenSecondsLabel" text="#seconds" />
					
				</Panel>
				<Label id="EndScreenVictory" text="" />
				<TextButton id="CloseButton" class="ButtonBevel" onactivate="FinishGame()" text="#CustomEndScreenClose" />
			</Panel>
			<Panel id="InfoContainer">
				<Panel id="TeamsContainer"/>
				<Panel id="AwardContainer"/>
			</Panel>
		</Panel>
	</Panel>
</root>
